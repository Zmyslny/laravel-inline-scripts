{
  "name": "zmyslny/laravel-inline-scripts",
  "description": "Provides an easy way to convert your JavaScript code, stored in a file or files, into a custom blade directive and inline it in HTML.",
  "license": "MIT",
  "type": "package",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.7",
    "laravel/pint": "^1.25",
    "laravel/sail": "^1.46",
    "orchestra/testbench": "^10.6",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-type-coverage": "^3.6",
    "rector/rector": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Zmyslny\\LaravelInlineScripts\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": [
      "npm run lint"
    ],
    "test:lint": [
      "npm run lint:check"
    ],
    "test:unit": "pest --parallel",
    "test:unit:co": "pest --parallel --coverage --min=100",
    "test:type-co": "pest --parallel --type-coverage --min=100",
    "test:js": "npm run test:js",
    "format": [
      "pint",
      "npm run format"
    ],
    "test:format": [
      "pint --test",
      "npm run format:check"
    ],
    "test:stan": "phpstan",
    "test:refa": "rector --dry-run",
    "refa": "rector",
    "test": [
      "@test:type-co",
      "@test:format",
      "@test:stan",
      "@test:refa",
      "@test:unit",
      "@test:lint",
      "@test:js"
    ]
  },
  "authors": [
    {
      "name": "Ostrowski Maciej",
      "email": "zmyslny@icloud.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Zmyslny\\LaravelInlineScripts\\BladeInlineScriptsProvider"
      ],
      "aliases": {
        "BladeInlineScripts": "Zmyslny\\LaravelInlineScripts\\BladeInlineScriptsFacade"
      }
    }
  }
}
